{% extends '_templates/base.njk' %}

{% block content %}
<article>
  <h1>Best Austin Restaurants</h1>
  <p>Check out Austin's most popular restaurants and cafes</p>

 <div class="row">
  {% for rest in restaurants.restaurants %}
  <div class="col-sm-6 bg-warning mg 2">
    <div class="card h-100">
      <img src="img/restaurants/{{rest.image}} " class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"> {{ rest.name }} </h5>
        <p class="card-text"> {{ rest.category}} </p>
        <p class="card-text"> {{rest.address}} </p>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
</article>

{% endblock %}